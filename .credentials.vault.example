# ============================================================================
# SECURE CREDENTIALS VAULT - EXAMPLE
# ============================================================================
# This file demonstrates the structure for storing API credentials
# Copy to .credentials.vault and fill with actual keys
#
# SECURITY RULES:
# - .credentials.vault MUST be in .gitignore
# - NEVER commit actual credentials to version control
# - Rotate keys regularly (recommended: every 90 days)
# - Use different keys for development, staging, and production
# - Store production keys in a secure secret management service
# ============================================================================

---
# Google Gemini API Keys
gemini:
  forgetm:
    key_name: "ForgeTM"
    project_id: "gen-lang-client-0173572845"
    api_key: "REPLACE_WITH_ACTUAL_KEY"
    created: "2025-10-21"
    quota_tier: "Free tier"
    usage: "ForgeTM project Gemini operations"

  default:
    key_name: "Default Gemini API Key"
    project_id: "gen-lang-client-0804080294"
    api_key: "REPLACE_WITH_ACTUAL_KEY"
    created: "2025-10-21"
    quota_tier: "Free tier"
    usage: "Default/shared Gemini operations"

# DeepSeek API Keys
deepseek:
  default:
    key_name: "ForgeTM/GoblinOS DeepKey"
    api_key: "REPLACE_WITH_ACTUAL_KEY"
    created: "2025-10-21"
    usage: "ForgeTM and GoblinOS integration"
    endpoint: "https://api.deepseek.com"

# Polygon API Keys
polygon:
  default:
    key_name: "Default"
    api_key: "REPLACE_WITH_ACTUAL_KEY"
    created: "2025-10-21"
    usage: "Financial market data and trading information"

# Key Rotation Schedule
rotation_schedule:
  gemini: "Every 90 days"
  deepseek: "Every 90 days"
  polygon: "Every 90 days"
  last_rotation: "2025-10-21"
  next_rotation: "2026-01-19"

# Environment Mapping
environments:
  development:
    gemini_key: "gemini.default"
    deepseek_key: "deepseek.default"
    polygon_key: "polygon.default"

  staging:
    # Use separate keys for staging (create additional entries above)
    gemini_key: "gemini.default"
    deepseek_key: "deepseek.default"
    polygon_key: "polygon.default"

  production:
    # PRODUCTION KEYS MUST BE STORED IN SECURE VAULT (e.g., AWS Secrets Manager, Azure Key Vault)
    # Reference them by ID, never store actual production keys in this file
    gemini_key: "arn:aws:secretsmanager:region:account:secret:gemini-prod"
    deepseek_key: "arn:aws:secretsmanager:region:account:secret:deepseek-prod"
    polygon_key: "arn:aws:secretsmanager:region:account:secret:polygon-prod"
