# Goblin Assistant (frontend)
# Copy to `.env.local` for local development. Do not commit `.env.local`.

# Backend origin (do NOT include `/v1`; client requests already use `/v1/...` paths).
# Local dev backend default:
NEXT_PUBLIC_FASTAPI_URL=http://localhost:8001
NEXT_PUBLIC_API_URL=http://localhost:8001
#
# Production example:
# NEXT_PUBLIC_FASTAPI_URL=https://goblin-backend.fly.dev
# NEXT_PUBLIC_API_URL=https://goblin-backend.fly.dev

# Optional: attach `x-api-key` for RAG endpoints (/rag/*). Use only for local/dev setups.
NEXT_PUBLIC_RAG_API_KEY=

# Feature flags
NEXT_PUBLIC_FEATURE_SEARCH=true
NEXT_PUBLIC_FEATURE_SANDBOX=true
NEXT_PUBLIC_FEATURE_ADMIN=false
NEXT_PUBLIC_MOCK_API=false

# Monitoring (optional)
NEXT_PUBLIC_DD_APPLICATION_ID=goblin-assistant
NEXT_PUBLIC_DD_CLIENT_TOKEN=
NEXT_PUBLIC_DD_ENV=development
NEXT_PUBLIC_SENTRY_DSN=
NEXT_PUBLIC_POSTHOG_API_KEY=
NEXT_PUBLIC_POSTHOG_HOST=

# Turnstile (optional)
NEXT_PUBLIC_TURNSTILE_SITE_KEY_CHAT=
NEXT_PUBLIC_TURNSTILE_SITE_KEY_LOGIN=
NEXT_PUBLIC_TURNSTILE_SITE_KEY_SEARCH=
