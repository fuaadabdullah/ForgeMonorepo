{
  "name": "goblin-assistant",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "generate-types": "openapi-typescript http://localhost:8001/openapi.json --output src/types/generated.ts",
    "validate-env": "tsx scripts/validate-env.ts",
    "test": "jest",
    "test:ui": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:e2e": "playwright test",
    "check:routes": "tsx scripts/check-routes.ts",
    "check:features": "tsx scripts/check-feature-boundaries.ts",
    "check:appledouble": "tsx scripts/check-no-appledouble.ts",
    "security:audit": "npm audit --audit-level moderate || true",
    "security:audit-ci": "audit-ci --config audit-ci.json",
    "security:audit-html": "echo 'HTML audit report disabled - npm-audit-html removed due to vulnerabilities' && npm audit --json > reports/security-audit.json || true",
    "security:scan": "npm run security:audit && npm run security:audit-html",
    "setup": "node scripts/setup.js",
    "quality:check": "npm run lint || echo 'ESLint failed, continuing...' && npm run type-check || echo 'Type check failed, continuing...' && npm run security:audit",
    "quality:fix": "npm run lint:fix",
    "test:all": "npm run test:coverage && npm run test:e2e",
    "metrics": "node scripts/quality-metrics.js",
    "quality:report": "npm run lint || echo 'ESLint failed, continuing...' && npm run test:coverage || echo 'Tests failed, continuing...' && npm run metrics"
  },
  "dependencies": {
    "@datadog/browser-logs": "^5.0.0",
    "@datadog/browser-rum": "^5.0.0",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-label": "^2.1.8",
    "@sentry/nextjs": "^8.0.0",
    "@sentry/react": "^8.0.0",
    "@tanstack/query-core": "^5.90.12",
    "@tanstack/react-query": "^5.90.12",
    "@vercel/analytics": "^1.6.1",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "lucide-react": "^0.469.0",
    "next": "^15.0.3",
    "posthog-js": "^1.302.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "lottie-react": "^2.4.0",
    "recharts": "^3.4.1",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@playwright/test": "^1.40.1",
    "@radix-ui/react-select": "^2.2.6",
    "@testing-library/jest-dom": "^6.1.5",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.1",
    "@types/jest": "^29.5.2",
    "@types/node": "^20.11.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.1",
    "@typescript-eslint/eslint-plugin": "^8.18.2",
    "@typescript-eslint/parser": "^8.18.2",
    "audit-ci": "^7.1.0",
    "autoprefixer": "^10.4.20",
    "clsx": "^2.1.1",
    "cross-fetch": "^4.1.0",
    "eslint": "^9.18.0",
    "eslint-config-next": "^15.0.3",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.4",
    "next": "^15.0.3",
    "openapi-typescript": "^7.0.0",
    "postcss": "^8.4.49",
    "prettier": "^3.7.4",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^3.4.17",
    "ts-jest": "^29.1.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2",
    "web-streams-polyfill": "^4.2.0"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "next lint --fix",
      "npm run type-check"
    ],
    "*.{js,jsx,json,md}": [
      "prettier --write"
    ]
  },
  "overrides": {
    "marked": "^14.1.0",
    "esbuild": "^0.25.0",
    "got": ">=11.8.5"
  }
}
