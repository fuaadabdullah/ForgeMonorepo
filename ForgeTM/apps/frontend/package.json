{
  "name": "forgetm-frontend",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "start": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test e2e/",
    "test:e2e:ci": "npx playwright install --with-deps && npx playwright test e2e --reporter=html"
  },
  "dependencies": {
    "@openfeature/react-sdk": "^0.4.0",
    "@tanstack/react-query": "^4.36.1",
    "clsx": "^2.1.1",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@pact-foundation/pact": "^16.0.2",
    "@playwright/test": "^1.40.0",
    "@tauri-apps/cli": "^2.9.2",
    "@testing-library/jest-dom": "6.5.0",
    "@testing-library/react": "16.1.0",
    "@testing-library/user-event": "14.5.1",
    "@types/react": "^18.3.7",
    "@types/react-dom": "^18.3.2",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^24.0.0",
    "typescript": "^5.6.3",
    "vite": "^5.4.6",
    "vitest": "^2.1.4"
  },
  "vitest": {
    "exclude": [
      "e2e/**"
    ]
  }
}
