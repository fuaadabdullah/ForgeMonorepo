{
  "name": "goblinos",
  "private": true,
  "scripts": {
    "dev": "pnpm -C packages/cli dev",
    "check": "tsc -b tsconfig.build.json --noEmit",
    "build": "tsc -b tsconfig.build.json && pnpm -r --filter ./packages... run build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "biome": "biome",
    "biome:check": "biome check .",
    "biome:check:verbose": "biome check . --verbose",
    "biome:fix": "biome check --write .",
    "biome:fix:unsafe": "biome check --write --unsafe .",
    "biome:format": "biome format --write .",
    "biome:format:check": "biome format --check .",
    "biome:imports": "biome check --organize-imports-enabled=true --linter-enabled=false --formatter-enabled=false .",
    "biome:imports:fix": "biome check --organize-imports-enabled=true --linter-enabled=false --formatter-enabled=false --write .",
    "biome:staged": "biome check --staged --files-ignore-unknown",
    "biome:staged:fix": "biome check --staged --write --files-ignore-unknown",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "deps:check": "depcruise --config .dependency-cruiser.js packages",
    "clone:check": "jscpd packages --ignore '**/*.test.ts,**/dist/**' --threshold 5",
    "smithy": "pnpm -C packages/goblins/forge-guild exec node bin/smithy",
    "smithy:deps": "pnpm smithy deps",
    "smithy:biome": "pnpm smithy biome-check",
    "version": "changeset version",
    "release": "pnpm build && changeset publish",
    "release:next": "pnpm build && changeset publish --tag next",
    "release:alpha": "pnpm build && changeset publish --tag alpha",
    "release:beta": "pnpm build && changeset publish --tag beta"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@changesets/cli": "^2.27.10",
    "@types/node": "^20.11.30",
    "@vitest/coverage-v8": "^2.0.5",
    "dependency-cruiser": "^16.8.0",
    "jscpd": "^4.0.5",
    "lefthook": "^1.7.0",
    "typescript": "^5.6.2",
    "vitest": "^2.0.5"
  },
  "workspaces": ["packages/*", "packages/goblins/*"],
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@opentelemetry/api": "^1.9.0",
    "@opentelemetry/auto-instrumentations-node": "^0.66.0",
    "@opentelemetry/exporter-otlp-http": "^0.26.0",
    "@opentelemetry/exporter-trace-otlp-http": "^0.207.0",
    "@opentelemetry/instrumentation-express": "^0.56.0",
    "@opentelemetry/instrumentation-http": "^0.207.0",
    "@opentelemetry/resources": "^2.2.0",
    "@opentelemetry/sdk-node": "^0.207.0",
    "@opentelemetry/sdk-trace-base": "^2.2.0",
    "@opentelemetry/semantic-conventions": "^1.37.0",
    "dotenv": "^17.2.3",
    "ollama": "^0.6.0",
    "openai": "^6.7.0",
    "zod": "^3.25.76"
  }
}
