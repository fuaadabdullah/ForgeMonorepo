{
  "name": "@goblinos/forge-master",
  "version": "0.1.0",
  "type": "module",
  "description": "Forge Master - World-class development environment orchestration with Goblin Smithy backend",
  "main": "dist/index.js",
  "bin": {
    "forge-guild": "./bin/forge-guild"
  },
  "scripts": {
    "build": "tsc",
    "check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write ."
  },
  "keywords": [
    "goblin",
    "devops",
    "iac",
    "ci-cd",
    "dependency-management",
    "configuration-management"
  ],
  "dependencies": {
    "@goblinos/shared": "workspace:*",
    "@goblinos/providers": "workspace:*",
    "commander": "^12.1.0",
    "execa": "^9.4.0",
    "fs-extra": "^11.2.0",
    "globby": "^14.0.2",
    "js-yaml": "^4.1.0",
    "dotenv": "^16.4.5",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^22.10.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.5"
  },
  "peerDependencies": {
    "typescript": "^5.6.0"
  }
}
